{% extends "PokeBundle::layout.html.twig" %}

{% block content %}
	Bienvenue sur PokeShine !
	
	<div class="container_content">
		<div bloc_search>
			{{ form_start(searchForm) }}
				<div class="form_content input_align">
					<div class="admin_form_input">{{ form_widget(searchForm.search) }}</div>
					<div class="form_error">{{ form_errors(searchForm.search)}}</div>
					<div class="form_input">{{ form_widget(searchForm.save) }}</div>
				</div>
			{{ form_end(searchForm) }}
		</div>
		<div class="bloc_last_shinies">
			<h2>Derniers shinies rencontrés</h2>
			{% for lastShiny in lastShinies %}
				<div class="bloc_last_shiny">
					<h3>{{ lastShiny.pokemon.name }}</h3>
					<img class="img_last_shiny"/>  
					<div>Capturé par {{ lastShiny.user.username }}</div>
				</div>
			{% endfor %}
			{% if lastShinies is empty %}
				<p>Aucun shiny rencontré actuellement.</p>
			{% endif %}
		</div>
	</div>
{% endblock content %}